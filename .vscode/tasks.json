{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint-watch",
      "problemMatcher": ["$eslint-compact", "$eslint-stylish"],
      "group": "build",
      "label": "npm: lint-watch",
      "detail": "esw --clear -w \"src/**/!(*.generated).{ts,tsx}\" --ext .tsx --ext .ts --changed"
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "tsc: watch - tsconfig.json"
    }
  ]
}
